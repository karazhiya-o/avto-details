<div class="container">
  <div class="row">
   <div class="col-md-4">
      <div class="thumbnail">
         <%= image_tag @product.photo_file_name, size:"400x300"%> <br> 

          <div class="caption">
            <%= @product.description%> <br>
			<%= @product.cost%> <br>
			<%= @product.maker%>

			<%= link_to "Comment", show_comments_path(:id=>@product.id), class: "btn btn-success" %>
			<%= link_to "Buy", buy_product_path(:id=>@product.id), class: "btn btn-danger" %>
   	
          </div>
        
      </div>
    </div>




  </div>
</div>