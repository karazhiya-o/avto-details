<style>
.col-item
{
    border: 1px solid #E1E1E1;
    border-radius: 5px;

    background: rgba(255,255,255,0.75);
        
        background-image: 
  linear-gradient(0deg, rgba(0,0,0,0), rgba(0,0,0,0.1) 50%, rgba(0,0,0,0)), 
  linear-gradient(0deg, rgba(255,255,255,0), rgba(255,255,255,0.8) 50%, rgba(255,255,255,0)), 
  radial-gradient(50% 100%, ellipse cover, rgba(0,0,0, 0.05), rgba(0,0,0,0) 50%);
    
    margin: 35px;
    width: 300px;
    height: 290px;
    font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
    

}
.col-item .photo img
{
    margin: 0 auto;
    border: 1px solid #68868c;
    width: 170px;
    height: 175px;
    position: center;
}

.col-item .info
{
    padding: 7px;
    border-radius: 0 0 5px 5px;
    margin-top: 6px;
}

.col-item:hover .info {
    background-color: #F5F5DC;
}
.col-item .price
{
    width: 67%;
    float: left;
    margin-top: 5px;
    font-size: 14px;
}

.col-item .price h5
{
    line-height: 20px;
    margin: 0;
}

.price-text-color
{
    color: #219FD1;
}

.col-item .info .rating
{
    color: #777;
}

.col-item .rating
{
    width: 33%;
    float: right;
    font-size: 12px;
    text-align: right;
    line-height: 52px;
    margin-bottom: 10px;
    height: 52px;
}

.col-item .separator
{
    border-top: 1px solid #E1E1E1;
}


.col-item .separator p
{
    line-height: 20px;
    margin-bottom: 0;
    margin-top: 10px;
    text-align: center;
}

.col-item .separator p i
{
    margin-right: 5px;
}



.controls
{
    margin-top: 20px;
}
[data-slide="prev"]
{
    margin-right: 10px;
}


.leftstr{
	float:left;
}
.rightstr {
    text-align: right; /* Выравнивание по правому краю */ 
</style>



<div class="container">
  <div class="row">


<% @products.each do |product| %>

	<div class="col-sm-4">
        <div class="col-item">
            <div class="photo">
             <center><%= image_tag product.photo_file_name%> </center>
            </div>



            <div class="info">
                  <div class="row">
                    <div class="price col-md-6">
                      <p class="leftstr"> <%= product.prname %> </p>
                    
                     <div style="clear: left"></div>
                    </div>
                                                
                    <div class="rating hidden-sm col-md-6">
                      <p class="rightstr">  <h5 class="price-text-color" style="text-align: right;"> <%= product.cost %> <br> <%= link_to 'Детальніше', product_path(product) %> </h5> </p>
                    </div>

                  </div>
            </div>
         

        </div>
	</div> 

<% end %>

</div>
</div>
