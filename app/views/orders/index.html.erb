<style>
	.block
	{
		display: block; 
		width: 50%;
		height: 40%;
		
	
		position: center;
		margin: 0 auto; /* Отступ слева и справа */
 		background: rgba(255,255,255,0.75);
		
		background-image: 
  linear-gradient(0deg, rgba(0,0,0,0), rgba(0,0,0,0.1) 50%, rgba(0,0,0,0)), 
  linear-gradient(0deg, rgba(255,255,255,0), rgba(255,255,255,0.8) 50%, rgba(255,255,255,0)), 
  radial-gradient(50% 100%, ellipse cover, rgba(0,0,0, 0.05), rgba(0,0,0,0) 50%);
	}

</style>
<div class="block">
	<% @orders.each do |order| %>
	<p> <%= order.product.prname %> 
	<%= link_to "Підтвердити", pay_order_path(:id=>order.id), method: :put, data: {confirm: 'are_you_sure?'}, class: 'btn btn-sm btn-size btn-info' %> 
	<%= link_to "Відмінити", delete_order_path(:id=>order.id), method: :put, data: {confirm: 'are_you_sure?'}, class: 'btn btn-sm btn-size btn-info' %> 

	</p>
	<%end%>
</div>
